{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="../../CSS/css.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
	<script src="/quizdepoulet/public/JS/game.js" defer></script>
{% endblock %}


{% block body %}
	<div id="init" class="min-vh-100" style="background-image: url('../../Image/fond-cartoon2.jpg'); background-size: cover; display: flex; flex-direction: column; justify-content: center"
    data-questions="{{questions}}">
		<div class="container" style="padding-top: 75px;">
			{# QUESTION #}
			<div class="row" style="justify-content: center; font-family: 'cartoonregular';">
				{{titre}}
			</div>
            <div id="contenu" class="row slideSpeed" style="justify-content: center; text-align: center; background-color: rgba(237, 197, 127, .5); border-radius: 10px; margin: 5px 0;">
			</div>
            <div class="row">
				<div id="r1" onclick="nextQuestion(0)" class="col-sm slideSpeed reponse" style="text-align: center; background-color: rgba(237, 197, 127, .5); border-radius: 10px; margin: 5px;">
                </div>
                <div id="r2" onclick="nextQuestion(1)" class="col-sm slideSpeed reponse" style="text-align: center; background-color: rgba(237, 197, 127, .5); border-radius: 10px; margin: 5px;">
			    </div>
			</div>
            <div class="row">
				<div id="r3" onclick="nextQuestion(2)" class="col-sm slideSpeed reponse" style="text-align: center; background-color: rgba(237, 197, 127, .5); border-radius: 10px; margin: 5px;">
			    </div>
                <div id="r4" onclick="nextQuestion(3)" class="col-sm slideSpeed reponse" style="text-align: center; background-color: rgba(237, 197, 127, .5); border-radius: 10px; margin: 5px;">
			    </div>
			</div>
			{# REPONSES #}
			
		</div>
	</div>
{% endblock %}
