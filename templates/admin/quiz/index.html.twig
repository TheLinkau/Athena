{% extends 'base.html.twig' %}

{% block body %}

<h1 class="text-center mb-3" style="margin-top:80px">Gestion des quiz</h1>
<div class="mx-auto w-75">
	<table data-toggle="table" data-classes="table table-bordered table-hover table-striped">
		<thead>
			<tr>
				<th data-sortable="true">Nom</th>
				<th data-sortable="true">Description</th>
				<th data-sortable="true">Créateur</th>
				<th data-sortable="true">Date de création</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for q in quiz %}
			<tr>
				<td>{{ q.name }}</td>
				<td class="text-truncate" style="max-width: 150px;">{{ q.description }}</td>
				<td>{{ q.createdBy }}</td>
				<td>{{ q.dateCreation | date("d-m-Y") }}</td>
				<td>
					<a href="{{ path('admin.quiz.delete', {id: q.id}) }}" class="btn btn-danger">Supprimer</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
	
{% endblock %}
