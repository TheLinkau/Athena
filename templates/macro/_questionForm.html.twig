{% macro printQuestionRow(questionForm) %}
    <div class="card p-3 mt-2" style="background: radial-gradient(#edc57f, #dfad55); border-radius: 10px;">
        {{ form_errors(questionForm) }}
        <div class="row mb-4">
            <div class="col-md-12">{{ form_row(questionForm.content) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(questionForm.answerA) }}</div>
            <div class="col-md-6">{{ form_row(questionForm.answerB) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(questionForm.answerC) }}</div>
            <div class="col-md-6">{{ form_row(questionForm.answerD) }}</div>
        </div>
        <div class="row mt-4">
            <div class="col-md-3">{{ form_row(questionForm.rightAnswer) }}</div>
        </div>
        <div class="row mt-4">
            <div class="col-md-3">{{ form_row(questionForm.image) }}</div>
        </div>
    </div>
{% endmacro %}